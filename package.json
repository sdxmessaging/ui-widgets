    "rimraf": "5.0.5",
    "rollup": "4.9.6",
    "shelljs": "0.8.5",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "scripts": {
    "prebuild": "rimraf lib tsconfig.tsbuildinfo",
    "build": "tsc -b",
