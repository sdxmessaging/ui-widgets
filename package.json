    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint --ext .ts src/",
    "example": "open example.html",
    "dist": "ts-node ./scriptHelpers/dist.ts",
    "dist-minor": "ts-node ./scriptHelpers/dist.ts minor",
    "dist-major": "ts-node ./scriptHelpers/dist.ts major"
