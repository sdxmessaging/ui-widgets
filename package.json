{
  "name": "@sdxmessaging/ui-widgets",
  "version": "1.3.16",
  "description": "Build form inputs and display values with mithril components and streams",
  "repository": {
    "type": "git",
    "url": "https://github.com/sdxmessaging/ui-widgets.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "author": "Michael Pastuch",
  "homepage": "https://github.com/sdxmessaging/ui-widgets",
  "bugs": "https://github.com/sdxmessaging/ui-widgets/issues",
  "license": "MIT",
  "main": "./umd/index.js",
  "module": "./dist/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "lodash": "^4.17.20",
    "mithril": "^2.0.4",
    "signature_pad": "^3.0.0-beta.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/lodash": "^4.14.168",
    "@types/mithril": "^2.0.6",
    "@types/node": "^13.13.5",
    "@types/signature_pad": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "canvas": "^2.6.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "jsdom": "^16.4.0",
    "nyc": "^15.1.0",
    "ospec": "^4.1.1",
    "post-commit": "0.0.1",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "rollup": "^2.38.0",
    "rollup-plugin-terser": "^7.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "build": "tsc -b",
    "postbuild": "rollup -c --environment MINIFY",
    "precommit": "./scriptHelpers/precommit.sh",
    "postcommit": "./scriptHelpers/postcommit.sh",
    "watch": "tsc -w",
    "watch-bundle": "rollup -c -w --environment MINIFY",
    "test": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=tsconfig.test.json ospec 'src/{**/*,*}.spec.ts' --preload node_modules/ts-node/register ./test-setup.ts",
    "coverage": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=tsconfig.test.json nyc ospec 'src/{**/*,*}.spec.ts' --preload node_modules/ts-node/register ./test-setup.ts",
    "lint": "eslint --ext .ts src/",
    "example": "open example.html",
    "dist": "npx ts-node ./scriptHelpers/dist.ts BUMP=$BUMP"
  },
  "pre-commit": [],
  "post-commit": [],
  "pre-push": [
    "test"
  ]
}
