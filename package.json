    "type": "git",
    "url": "https://github.com/sdxmessaging/ui-widgets.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "author": "Michael Pastuch",
  "homepage": "https://github.com/sdxmessaging/ui-widgets",
  "bugs": "https://github.com/sdxmessaging/ui-widgets/issues",
  "license": "MIT",
  "main": "./umd/index.js",
  "module": "./dist/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "lodash": "^4.17.19",
    "mithril": "^2.0.4",
    "signature_pad": "^3.0.0-beta.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/lodash": "^4.14.157",
    "@types/mithril": "^2.0.3",
    "@types/node": "^13.13.5",
    "@types/signature_pad": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "canvas": "^2.6.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "jsdom": "^16.3.0",
    "nyc": "^15.1.0",
    "ospec": "^4.1.1",
    "rollup": "^2.21.0",
    "rollup-plugin-terser": "^6.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "build": "tsc -b",
    "postbuild": "rollup -c --environment MINIFY",
