  "bugs": "https://github.com/sdxmessaging/ui-widgets/issues",
  "license": "MIT",
  "main": "./umd/index.js",
  "module": "./dist/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "lodash": "4.17.21",
    "mithril": "2.0.4",
    "signature_pad": "3.0.0-beta.4"
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@types/lodash": "4.14.171",
    "@types/mithril": "2.0.7",
    "@types/node": "14.14.41",
    "@types/signature_pad": "2.3.2",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "eslint": "7.31.0",
    "jest": "27.0.6",
    "jest-canvas-mock": "^2.3.1",
    "jest-cli": "27.0.6",
    "pre-push": "0.1.1",
    "rimraf": "3.0.2",
    "rollup": "2.54.0",
    "rollup-plugin-terser": "7.0.2",
    "shelljs": "0.8.4",
    "ts-jest": "27.0.4",
    "ts-node": "10.2.0",
    "typescript": "4.3.5"
  },
  "scripts": {
    "prebuild": "rimraf lib tsconfig.tsbuildinfo",
    "build": "tsc -b",
